{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "project": {
        "name": "septa-calculator"
    },
    "apps": [
        {
            "root": "src",
            "outDir": "dist",
            "assets": [
                "assets",
                "favicon.ico",
                "septa-options.json",
                "api"
            ],
            "index": "index.html",
            "main": "main.ts",
            "polyfills": "polyfills.ts",
            "tsconfig": "tsconfig.browser.json",
            "prefix": "septa",
            "styles": [
                "styles.scss"
            ],
            "stylePreprocessorOptions": {
                "includePaths": [
                    "styles"
                ]
            },
            "scripts": [
                "fetch-options.js"
            ],
            "environmentSource": "environments/environment.ts",
            "environments": {
                "dev": "environments/environment.ts",
                "prod": "environments/environment.prod.ts"
            }
        }
    ],
    "lint": [
        {
            "project": "src/tsconfig.browser.json",
            "exclude": "**/node_modules/**"
        }
    ],
    "defaults": {
        "styleExt": "scss",
        "component": {
            "spec": false,
            "inlineStyle": true,
            "inlineTemplate": true
        },
        "directive": {
            "spec": false
        },
        "class": {
            "spec": false
        },
        "guard": {
            "spec": false
        },
        "module": {
            "spec": false
        },
        "pipe": {
            "spec": false
        },
        "service": {
            "spec": false
        }
    }
}
